<resources>
    <!-- Menu theme -->
    <style name="menuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:textColor">@color/colorMenuText</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="menuTitle" parent="menuStyle">
        <item name="android:textSize">@dimen/menu_title</item>
        <item name="android:textColor">@color/colorBluenoName</item>
    </style>
    
    <style name="strongLine" parent="menuStyle">
        <item name="android:background">@color/colorBluenoName</item>
        <item name="android:padding">0.5dp</item>
    </style>
    
    <style name="softLine" parent="strongLine">
        <item name="android:background">@color/colorSoftLine</item>
    </style>

    <style name="emptyView" parent="menuStyle">
        <item name="android:padding">2dp</item>
    </style>


    

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBluenoName</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBluenoName</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
