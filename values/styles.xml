<resources>
    <!-- Menu theme -->
    <style name="menuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:textColor">@color/colorMenuText</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="mainMenuStyle" parent="menuStyle">
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">@dimen/menu_title</item>
    </style>

    <style name="menuTitle" parent="mainMenuStyle">
        <item name="android:textColor">@color/colorBlueOrcam</item>
        <item name="android:shadowColor">#505050</item>
        <!--<item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>-->
    </style>

    <style name="strongLine">
        <item name="android:background">@color/colorBlueOrcam</item>
        <item name="android:textSize">0.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">0.5dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorBlueOrcam</item>
    </style>




    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlueOrcam</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlueOrcam</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
